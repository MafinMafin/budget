.page-header
  %h1 Category
.fieldset
  %dl
    %dt.label.label-default title
    %dd
      %pre.prettyprint= @category.title
    %dt.label.label-default description
    %dd
      %pre.prettyprint= @category.description
    %dt.label.label-default subcategories
    - @category.subcategories.each do |subcategory|
      %dd
        %pre.prettyprint= subcategory.title

.form-group
  = link_to 'back', categories_path, class: 'btn btn-default'
  = link_to 'edit', edit_category_path(@category), class: 'btn btn-default'
  = link_to 'destroy', category_path(@category), method: 'delete', data: { confirm: 'Are you sure?'}, class: 'btn btn-danger'                                                                                   |
