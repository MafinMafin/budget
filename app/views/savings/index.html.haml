.container
  %section.content-header
    %h1
      Savings
      %small= number_to_pln(@total_value)
      = link_to new_saving_path do
        %i.fa.fa-plus-square-o

  %section.content
    .container
      .row
        = render partial: 'savings', locals: { savings: @savings }
      .text-center
        = paginate @savings
