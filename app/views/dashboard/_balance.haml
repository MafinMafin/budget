  %h2.section-heading.text-center Balance:
%h3.text-center{ class: (balance > 0 ? 'plus' : 'minus' ) }= number_to_currency(balance, unit: 'zł', format: "%n %u")

.page-header
  %h2.section-heading.text-center Dividable:

%h4.text-center You spend #{number_to_currency(cu_share, unit: 'zł', format: '%n %u')}
%h4.text-center The other one spend #{number_to_currency(ou_share, unit: 'zł', format: '%n %u')}

