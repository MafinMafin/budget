= form_for @income, :html => { :class => 'form-horizontal form-model' } do |f|
  .form-group
    = f.label :value, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :value, :class => 'text-field form-control'
  .form-group
    = f.label :earn_date, :class => 'control-label col-md-2'
    .col-md-10
      = f.datetime_select :earn_date, :class => 'text-field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        incomes_path, :class => 'btn btn-default'                    |
