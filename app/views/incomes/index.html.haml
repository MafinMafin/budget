- model_class = Income
.page-header
  %h1= t '.title', default: Income
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:earn_date)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', default: t("helpers.actions")
  %tbody
    - @incomes.each do |income|
      %tr
        %td= income.id
        %td= income.value
        %td= income.earn_date
        %td= l income.created_at, format: :long
        %td
          = link_to "Show", income_path(income), class: 'btn btn-xs'
          = link_to "Edit", edit_income_path(income), class: 'btn btn-xs'
          = link_to "Destroy", income_path(income), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs'
= link_to 'new', new_income_path, class: 'btn btn-primary'
