- tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class|
  = link_to tag.name, tag_path(tag.name), class: css_class
.page-header
  %h1 Expense
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Value
      %th Description
      %th Subcategory
      %th Spent Date
      %th Created_at
      %th User
      %th Tags
      %th Actions
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.id
        %td= expense.value
        %td= expense.description
        %td= expense.subcategory&.title
        %td= l expense.operation_date, format: :short
        %td= l expense.created_at, format: :short
        %td= expense.user&.email
        %td= raw expense.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
        %td
          = link_to 'Show', expense_path(expense), class: 'btn btn-xs'
          = link_to 'Edit', edit_expense_path(expense), class: 'btn btn-xs'
          = link_to 'Remove', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs'
= link_to 'new', |
  new_expense_path,                                      |
  class: 'btn btn-primary'                            |
