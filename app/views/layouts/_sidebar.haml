%aside.main-sidebar
  / sidebar: style can be found in sidebar.less
  %section.sidebar
    / Sidebar user panel (optional)
    .user-panel
      .pull-left.image
        = image_tag('no-avatar.jpg', height: '160', width: '160', class: 'img-circle')
      .pull-left.info
        %p= current_user.email
        %a
          %i.fa.fa-circle.text-success
          Online
    %form.sidebar-form{:action => "#", :method => "get"}
      .input-group
        %input.form-control{:name => "q", :placeholder => "Search...", :type => "text"}/
        %span.input-group-btn
          %button#search-btn.btn.btn-flat{:name => "search", :type => "submit"}
            %i.fa.fa-search
    %ul.sidebar-menu
      %li.active
        = link_to dashboard_index_path do
          %i.fa.fa-dashboard
          %span DASHBOARD
      %li
        = link_to new_expense_path do
          %i.fa.fa-link
          %span Add Expense
      %li
        = link_to new_income_path do
          %i.fa.fa-link
          %span Add Income
      %li
        = link_to expenses_path do
          %i.fa.fa-link
          %span Expenses
      %li
        = link_to incomes_path do
          %i.fa.fa-link
          %span Incomes
      %li
        = link_to categories_path do
          %i.fa.fa-link
          %span Categories

      %li.treeview
        %a{:href => "#"}
          %i.fa.fa-link
          %span Multilevel
          %span.pull-right-container
            %i.fa.fa-angle-left.pull-right
        %ul.treeview-menu
          %li
            %a{:href => "#"} Link in level 2
          %li
            %a{:href => "#"} Link in level 2
    / /.sidebar-menu
  / /.sidebar
